<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:padding="4dp"
    tools:context=".Categories.DogsCategoryActivity">

    <RelativeLayout
        android:id="@+id/buy_fish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/fish"
            android:tint="#6F000000"
            android:transitionName="show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Buy Fish"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="32sp"
            android:fontFamily="@font/raleway_semi_bold"
            android:transitionName="text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fish_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/fishfood"
            android:tint="#6F000000"
            android:transitionName="show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Food"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="32sp"
            android:fontFamily="@font/raleway_semi_bold"
            android:transitionName="text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fish_supplies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/fishsupplies"
            android:tint="#6F000000"
            android:transitionName="show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Supplies"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="32sp"
            android:fontFamily="@font/raleway_semi_bold"
            android:transitionName="text" />
    </RelativeLayout>

</LinearLayout>